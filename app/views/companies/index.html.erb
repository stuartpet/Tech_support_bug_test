<div class="container">
    <div class="page-header">
    <h1>Listing Companies</h1>
  </div>
</div>

<div class="container">
  <%= link_to 'Create New Company', new_company_path %>
  <br>
  </br>
  <%= link_to 'Home', root_path %>
  <br>
  <br></br>
</div>

<div class="container">

  <table class="table table-striped">
    <tr>
      <th>Company Name</th>
      <th>Details</th>
      <th class="text-center">Action</th>
    </tr>

    <tbody>
      <% @company.each do |company| %>
        <tr>
          <td><%= company.name %></td>
          <td><%= company.details %></td>
          <td class="text-center">
          <%= link_to 'Show', company_path(company), class: 'label
          label-info'%>
          <%= link_to 'Destroy', company_path(company), method: :delete, data:
          { confirm: 'Are you sure?' }, class: 'label label-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
